{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "esModuleInterop": true,
    "jsx": "preserve",
    "strict": true,
    "lib": [
      "es2016",
      "es2018",
      "dom"
    ],
    "target": "esnext",
    "sourceMap": true,
    "module": "esnext",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "importHelpers": true,
    "noEmit": true
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "components/schools/CampusReelCarousel.js"
  ]
}
